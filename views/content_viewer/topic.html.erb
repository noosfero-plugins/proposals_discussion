<div class="description">
  <%= @page.body %>
</div>
<h4><%= @page.discussion.title %></h4>

<div class="proposals-count">
  <span class="label"><%= _('Number of Proposals: ') %></span>
  <span class="content"><%= @page.proposals.count %></span>
</div>
<div class="participants-count">
  <span class="label"><%= _('Number of Participants: ') %></span>
  <span class="content"><%= @page.proposals_authors.count %></span>
</div>
<div class="comments-count">
  <span class="label"><%= _('Number of Comments: ') %></span>
  <span class="content"><%= @page.proposals_comments.count %></span>
</div>
<div class="active-participants">
  <span class="label"><%= _('Most active: ') %></span>
  <span class="content">
    <% @page.most_active_participants.each do |author| %>
      <%= link_to profile_image(author, :icon), author.url, :title => author.name %>
    <% end %>
  </span>
</div>

<div class="actions">
  <%= link_to url_for({:controller => 'cms', :action => 'new', :type => "ProposalsDiscussionPlugin::Proposal", :parent_id => @page.id}), :class => 'button with-text icon-add' do %>
    <strong><%= _("Send my proposal") %></strong>
  <% end %>
</div>

<%= render :partial => 'content_viewer/proposals_list', :locals => {:holder => @page} %>
